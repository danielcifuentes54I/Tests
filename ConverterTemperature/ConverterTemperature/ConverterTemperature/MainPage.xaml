<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ConverterTemperature"
             x:Class="ConverterTemperature.MainPage">

    <StackLayout Padding="10,30,10,10">
        <!--centro,arriba-->
        <Label Text="Convert Centigrade to fahrenheit" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

        <Label Text="Centigrade grades" 
             />

        <Entry x:Name="centigradeEntry"
               Placeholder="Enter centigrade grades"
            ></Entry>

        <Button x:Name="converterButton"
                Text="converter!"
            ></Button>

        <Label Text="Fahrenheit grades" 
             />

        <Entry x:Name="fahrenheitEntry"
               Placeholder="fahrenheit grades"
            ></Entry>

    </StackLayout>
</ContentPage>